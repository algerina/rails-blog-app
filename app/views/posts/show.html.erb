<h1>Words of Light</h1>
<div>
<h1 ><%= @post.title %>  by:<%=@post.author.name%></h1>
<p ><%= @post.text %>  by:<%=@post.author.name%></p>
<p><%= "Comments: #{@post.comments_counter || 0}, Likes: #{@post.likes_counter || 0 }" %></p>
   <% flash.each do |type, msg| %>
      <div class="comment">
        <%= msg %>
      </div>
    <% end %>
<% @post.comments.each do |comment| %>
    <p><%= "#{comment.author.name}: #{comment.text}" %></p>

  <% end %>

  <button><%= link_to ("New post"), new_user_post_path(@user.id, @post.id)%></button>



  <button> <%= link_to 'Add a comment',new_user_post_comment_path(@user.id ,@post.id)%>
  </button>

  <%= button_to 'Like',user_post_likes_path(@user.id, @post.id), method: :post,class:"btn btn-light mt-3"%>

</div>

